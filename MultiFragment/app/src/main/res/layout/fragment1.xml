<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.wjf.multifragment.widget.PagerSlidingTabStrip
        android:id="@+id/pager_sliding"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textColor="@android:color/darker_gray"
        app:pstsDividerColor="@color/transparent"
        app:pstsIndicatorColor="@android:color/black"
        app:pstsIndicatorHeight="2dip"
        app:pstsTabBackground="@drawable/pst_selector_background"
        app:pstsTabPaddingLeftRight="20dip"
        app:pstsTextAllCaps="false"
        app:pstsUnderlineHeight="0dip"
        app:selectedTabTextColor="@android:color/black" />

    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>